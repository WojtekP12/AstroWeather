<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark"/>
    <TableRow>
        <TextView android:layout_width="0dp" android:layout_weight="1.5"
            android:text="Time :"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000" />
        <TextView android:layout_width="0dp" android:layout_weight="0.5"
            android:text="12"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:id="@+id/currentTimeHours" />
        <TextView android:layout_width="0dp" android:layout_weight="0.5"
            android:text=":"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000"/>
        <TextView android:layout_width="0dp" android:layout_weight="0.5"
            android:text="00"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:id="@+id/currentTimeMinutes" />
        <TextView android:layout_width="0dp" android:layout_weight="0.5"
            android:text=":"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000"/>
        <TextView android:layout_width="0dp" android:layout_weight="2"
            android:text="00"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:id="@+id/currentTimeSeconds" />
        <TextView android:layout_width="0dp" android:layout_weight="2.5"
            android:text="Location :"
            android:textSize="30dp"
            android:textColor="#000000" />
        <TextView android:layout_width="0dp" android:layout_weight="1"
            android:text="53.1"
            android:textSize="30dp"
            android:textColor="#000000"
            android:id="@+id/currentLocationLat" />
        <TextView android:layout_width="0dp" android:layout_weight="1"
            android:text="54.2"
            android:textSize="30dp"
            android:textColor="#000000"
            android:id="@+id/currentLocationLng" />
    </TableRow>
    <TableRow>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".activities.MainActivity">

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>
    </TableRow>
</TableLayout>
