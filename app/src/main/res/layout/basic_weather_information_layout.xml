<!-- fragment_screen_slide_page.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicWeatherContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">


        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Lodz"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000459"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <ImageView android:layout_height="50dp"
                android:layout_width="match_parent"
                android:src="@mipmap/moon"
                android:id="@+id/weatherImage" />

        </TableRow>
        <!-- MoonRise & MoonSet -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Location"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Lat / Lng :"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/locationValue" />
        </TableRow>

        <!-- NewMoon & FullMoon -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Time"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/timeValue" />
        </TableRow>

        <!-- Phase -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Temperature"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Degrees :"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/temperatureValue" />
        </TableRow>

        <!-- Lunation -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Air pressure"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Value :"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"/>

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/airPressureValue" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Description"
                android:layout_span="3"
                android:padding="18dip"
                android:textColor="#000000"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/descriptionValue" />
        </TableRow>
    </TableLayout>

</ScrollView>