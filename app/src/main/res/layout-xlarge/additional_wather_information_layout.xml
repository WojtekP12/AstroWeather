<!-- fragment_screen_slide_page.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicWeatherContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2db9e4">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"  android:stretchColumns="*" android:background="#2db9e4">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/weatherBackGround_Dark"/>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="48dp"
                android:text="Lodz"
                android:layout_span="3"
                android:padding="30dip"
                android:textColor="@color/BlackText"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/titleValue"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <ImageView android:layout_height="200dp"
                android:layout_width="match_parent"
                android:id="@+id/weatherImage"
                android:src="@drawable/weather44"/>

        </TableRow>
        <!-- MoonRise & MoonSet -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Wind direction"
                android:layout_span="3"
                android:padding="24dip"
                android:textColor="@color/BlackText"
                android:textAlignment="textStart"
                android:textStyle="bold"
                />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/BlackText"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/windDirectionValue" />
        </TableRow>

        <!-- NewMoon & FullMoon -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Wind speed"
                android:layout_span="3"
                android:padding="24dip"
                android:textColor="@color/BlackText"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/BlackText"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/windForceValue" />
        </TableRow>

        <!-- Phase -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Humidity"
                android:layout_span="3"
                android:padding="24dip"
                android:textColor="@color/BlackText"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Value :"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/BlackText"
                android:padding="18dip" android:gravity="center"/>

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/BlackText"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/humidityValue" />
        </TableRow>

        <!-- Lunation -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Visibility"
                android:layout_span="3"
                android:padding="24dip"
                android:textColor="@color/BlackText"
                android:textAlignment="textStart"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Value :"
                android:layout_weight="1"
                android:textSize="24dp"
                android:textColor="@color/BlackText"
                android:padding="18dip" android:gravity="center"/>

            <TextView
                android:text="loading..."
                android:layout_weight="1"
                android:textColor="@color/BlackText"
                android:textSize="24dp"
                android:padding="18dip" android:gravity="center"
                android:id="@+id/visibilityValue" />
        </TableRow>
    </TableLayout>

</ScrollView>