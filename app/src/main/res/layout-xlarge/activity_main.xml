<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff">
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:text="Time :"
            android:textSize="40dp"
            android:layout_weight="1"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="12"
            android:textSize="40dp"
            android:layout_weight="0.4"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/currentTimeHours"
            android:textAlignment="textStart" />
        <TextView
            android:layout_width="match_parent"
            android:text=":"
            android:textSize="40dp"
            android:layout_weight="0.4"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="00"
            android:textSize="40dp"
            android:layout_weight="0.4"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/currentTimeMinutes" />
        <TextView
            android:layout_width="match_parent"
            android:text=":"
            android:textSize="40dp"
            android:layout_weight="0.4"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="00"
            android:textSize="40dp"
            android:layout_weight="1"
            android:textIsSelectable="false"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/currentTimeSeconds" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Location :"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="53.1"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/currentLocationLat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="54.2"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/currentLocationLng" />

    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <TableRow android:orientation="horizontal">
        <fragment android:name="com.example.wojciechpelka.astroweather.MoonFragment"
            android:id="@+id/moonFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout="@layout/moon_layout" />

        <fragment android:name="com.example.wojciechpelka.astroweather.SunFragment"
            android:id="@+id/sunFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout="@layout/sun_layout" />
    </TableRow>
</TableLayout>